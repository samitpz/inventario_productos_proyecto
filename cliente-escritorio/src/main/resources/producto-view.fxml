<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?> <BorderPane xmlns:fx="http://javafx.com/fxml"
                                              fx:controller="com.inventario.cliente.controller.ProductoController">

    <center>
        <TableView fx:id="tablaProductos">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>
                <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="200"/>
                <TableColumn fx:id="colPrecio" text="Precio" prefWidth="100"/>
                <TableColumn fx:id="colStock" text="Stock" prefWidth="80"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="5">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Gestión de Productos"/>
            <GridPane hgap="10" vgap="5">
                <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtId" GridPane.rowIndex="0" GridPane.columnIndex="1" editable="false"/>

                <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNombre" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Descripción:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtDescripcion" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Precio:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtPrecio" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Stock:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtStock" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10">
                <Button text="Crear" onAction="#crearProducto"/>
                <Button text="Actualizar" onAction="#actualizarProducto"/>
                <Button text="Eliminar" onAction="#eliminarProducto"/>
                <Button text="Refrescar" onAction="#cargarProductos"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>